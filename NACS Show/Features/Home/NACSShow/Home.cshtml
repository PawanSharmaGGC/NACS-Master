@addTagHelper *, Kentico.Content.Web.Mvc

@model NACSShow.Features.Home.HomePageViewModel

@{
    ViewBag.Title = Model.Title;
}

@{
    Layout = "~/Features/Shared/NACSShow/_Layout.cshtml";
}

@section styles
{
    @* Includes CSS necessary for page builder functionality *@
    <page-builder-styles />
}
@section scripts
{
    @* Includes scripts necessary for page builder functionality *@
    <page-builder-scripts />
}

<section class="teaser">
    <div class="col-sm-offset-3 col-sm-4">
        <p>@Model.Title</p>
    </div>
    <div class="clearfix"></div>
</section>
<section class="content">
    <div class="col-sm-offset-3 col-sm-5">
        <h1>@Model.Title</h1>
        <p>@Model.Title</p>

        <editable-area area-identifier="editableArea" />
    </div>
    <div class="clearfix"></div>
</section>