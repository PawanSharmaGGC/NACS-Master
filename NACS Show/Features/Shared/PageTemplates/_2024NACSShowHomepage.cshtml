@using NACSShow

@{
    Layout = "~/Features/Shared/NACSShow/_Layout.cshtml";
}

@section styles {
<style>
        h1 {
            margin: 0.67em 0;
        }
</style>
}

<section class="row center-xs section--margins">

    <div class="col-xs col-md-5" style="display:flex; margin:1rem 0.5rem">
        <editable-area area-identifier="HalfZone1"></editable-area>
    </div>

    <div class="col-xs col-md-5" style="display:flex; margin:1rem 0.5rem">
        <editable-area area-identifier="HalfZone2"></editable-area>
    </div>

    <div class="col-xs col-md-5" style="margin:1rem 0.5rem">
        <editable-area area-identifier="HalfZone3"></editable-area>
    </div>

    <div class="col-xs col-md-5" style="display:flex; margin:1rem 0.5rem">
        <editable-area area-identifier="HalfZone4"></editable-area>
    </div>

    <div class="col-xs col-md-5" style="display:flex; margin:1rem 0.5rem">
        <editable-area area-identifier="HalfZone5"></editable-area>
    </div>

    <div class="col-xs col-md-5" style="display:flex; margin:1rem 0.5rem">
        <editable-area area-identifier="HalfZone6"></editable-area>
    </div>

    <div class="col-xs col-md-5" style="display:flex; margin:1rem 0.5rem">
        <editable-area area-identifier="HalfZone7"></editable-area>
    </div>

    <div class="col-xs col-md-5" style="display:flex; margin:1rem 0.5rem">
        <editable-area area-identifier="HalfZone8"></editable-area>
    </div>

    <div class="col-xs col-md-5" style="display:flex; margin:1rem 0.5rem">
        <editable-area area-identifier="HalfZone9"></editable-area>
    </div>

    <div class="col-xs col-md-5" style="display:flex; margin:1rem 0.5rem">
        <editable-area area-identifier="HalfZone10"></editable-area>
    </div>
</section>

<section>
    <div class="row">
        <div class="col-xs-12">
            <div class="wrapper container">
                <div class="block--sponsorship">
                    <div class="ad">
                        <div class="ad__wrapper">
                            <div class="multi-ad-container">
                                <div>
                                    <editable-area area-identifier="AdZone1"></editable-area>
                                </div>
                                <div>
                                    <editable-area area-identifier="AdZone2"></editable-area>
                                </div>
                                <div>
                                    <editable-area area-identifier="AdZone3"></editable-area>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>