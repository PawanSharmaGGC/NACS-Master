    string GetFormatIcon(string format)
    {
        string icon = "";

        if (format == "Awards")
            icon = "<img class='format-icon' src='~/_Content/NACSShow/img/icon/format_icon_Awards.png' alt='Format: Awards' title='Format: Awards' />";
        else if (format == "Case Study")
            icon = "<img class='format-icon' src='~/_Content/NACSShow/img/icon/format_icon_CaseStudy.png' alt='Format: Case Study' title='Format: Case Study' />";
        else if (format == "Expert/Expert Interview")
            icon = "<img class='format-icon' src='~/_Content/NACSShow/img/icon/format_icon_ExpertExpertInterview.png' alt='Format: Expert-Expert Interview' title='Format: Expert-Expert Interview' />";
        else if (format == "Ignite")
