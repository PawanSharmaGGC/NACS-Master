        else if (format == "Masterclass")
            icon = "<img class='format-icon' src='~/_Content/NACSShow/img/icon/format_icon_Masterclass.png' alt='Format: Masterclass' title='Format: Masterclass' />";
        else if (format == "Panel")
            icon = "<img class='format-icon' src='~/_Content/NACSShow/img/icon/format_icon_Panel.png' alt='Format: Panel' title='Format: Panel' />";
        else if (format == "Great Debate: Point Counterpoint")
            icon = "<img class='format-icon' src='~/_Content/NACSShow/img/icon/format_icon_PointCounterpoint.png' alt='Format: Great Debate: Point Counterpoint' title='Format: Great Debate: Point Counterpoint' />";
        else if (format == "Roundtables")
            icon = "<img class='format-icon' src='~/_Content/NACSShow/img/icon/format_icon_Roundtables.png' alt='Format: Roundtables' title='Format: Roundtables' />";
        else if (format == "Think You Know Me?")
