@using NACS.Portal.Core.Models

@model FormWidgetViewModel

<style type="text/css">
    table, th, td {
        border: 0px;
        text-align: left;
    }

    input {
        margin: 10px;
        width: auto;
    }
</style>


<div id="form_Panel" style="position:relative">
    <div id="form-section">
        <span style="display:none;" class="ErrorLabel" id="error-message"></span>
        <div class="FormPanel" id="FormPanel">



            @Html.Raw(Model?.Heading)
            <p>@Html.Raw(Model?.Description)</p>

            <form id="alumni-2023-nacs-show-event-rsvp-form" method="post">

                <table class="EditingFormTable">
                    <tbody>
                        <tr>
                            <td class="FieldLabel"><label id="lblFirstName" class="EditingFormLabel" for="txtFirstName">First Name:</label></td>
                            <td class="EditingFormValueCell">
                                <div id="ncpfirstname" class="EditingFormControlNestedControl editing-form-control-nested-control">
                                    <input name="FirstName" type="text" maxlength="200" id="txtFirstName" class="form-control" required>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td class="FieldLabel"><label id="lblLastName" class="EditingFormLabel" for="txtLastName">Last Name:</label></td>
                            <td class="EditingFormValueCell">
                                <div id="ncplastname" class="EditingFormControlNestedControl editing-form-control-nested-control">
                                    <input name="LastName" type="text" maxlength="200" id="txtLastName" class="form-control" required>
                                </div>
                            </td>

                        </tr>
                        <tr>
                            <td class="FieldLabel"><label id="lblCompanyName" class="EditingFormLabel" for="txtCompanyName">Company Name:</label></td>
                            <td class="EditingFormValueCell">
                                <div id="ncpcompanyname" class="EditingFormControlNestedControl editing-form-control-nested-control">
                                    <input name="CompanyName" type="text" maxlength="300" id="txtCompanyName" class="form-control" required>
                                </div>
                            </td>

                        </tr>
                        <tr>
                            <td class="FieldLabel"><label id="lblEmail" class="EditingFormLabel" for="txtEmail">Email:</label></td>
                            <td class="EditingFormValueCell">
                                <div id="ncpemail" class="EditingFormControlNestedControl editing-form-control-nested-control">
                                    <input name="Email" type="text" maxlength="300" id="txtEmail" class="form-control" required>
                                </div>
                            </td>

                        </tr>
                        <tr>
                            <td class="FieldLabel"><span id="lblRSVP" class="EditingFormLabel">RSVP:</span></td>
                            <td class="EditingFormValueCell">
                                <div id="ncprsvp" class="EditingFormControlNestedControl editing-form-control-nested-control">
                                    <span id="RSVP_list" class="radio radio-list-vertical">
                                        <input id="RSVP_list_0" type="radio" name="RSVP" value="Yes"><label for="RSVP_list_0">Yes</label><br>
                                        <input id="RSVP_list_1" type="radio" name="RSVP" value="No"><label for="RSVP_list_1">No</label>
                                    </span>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td class="FieldLabel"></td>
                            <td class="EditingFormValueCell">
                                <div class="g-recaptcha" data-sitekey="@Model?.captchaSiteKey"></div>
                            </td>
                        </tr>
                        <tr>
                            <td class="EditingFormButtonLeftCell"></td>
                            <td class="EditingFormButtonCell">
                                <input type="submit" name="btnOK" value="Submit" id="btnOK" class="FormButton btn btn-primary">
                                </td>
                        </tr>
                    </tbody>
                </table>
            </form>
        </div>
        
        <span style="display:none;" id="thank-you-message" class="InfoLabel">
            @Html.Raw(Model?.SubmitMessage)
        </span>
    </div>
</div>