@using Convenience.org.Components.Widgets.FAQWidget
@using Kentico.Content.Web.Mvc.PageBuilder
@using Convenience.org

@{
	Layout = "~/Features/Shared/Convenience/_Layout.cshtml";
}

@model TemplateViewModel

@{
	var templateModel = Model.GetTemplateModel<Convenience.GenericLeadGen>();
}


@section Placeholder {
	<div class="container d-flex justify-content-center">
		<div class="custom-placeholder text-center">
			<p class="m-0">Desktop Leaderboard - Optional (728x90px)</p>
		</div>
	</div>
}
<div class="container">
	@await Component.InvokeAsync("Breadcrumb")
	@{
		var optionsLimited = new EditableAreaOptions
			{
				AllowedWidgets = WidgetAreaIdentifier.Hero_Widgets,
				AllowedSections = AllowedComponents.ALL
			};
	}
	<div class="row">
		@await Html.Kentico().EditableAreaAsync("HeroWidgetArea", optionsLimited)
	</div>

	<div class="row">
		@await Html.Kentico().EditableAreaAsync("WidgetArea")
	</div>
	<div class="form-download-report">
		<div class="row">
			@await Html.Kentico().EditableAreaAsync("WidgetArea3", new EditableAreaOptions
{
	AllowedWidgets = new[] { "FormNACSCEOSummit" },
})
		</div>
	</div>

	<div class="d-flex justify-content-center align-items-center gap-5 mb-5">
		<div class="d-flex justify-content-center align-items-center me-5 p-4 text-center" style="width: 300px; height: 250px;background-color:#E8E8E8;">
			<p class="box-text">
				Medium Rectangle - Optional
				(300x250px)
			</p>
		</div>
		<div class="d-flex justify-content-center align-items-center p-4 text-center" style="width: 300px; height: 250px;background-color:#E8E8E8;">
			<p class="box-text">
				Medium Rectangle - Optional
				(300x250px)
			</p>
		</div>
	</div>
</div>

<div class="row">
	@await Html.Kentico().EditableAreaAsync("WidgetArea1")
</div>
<div class="container">
	<div class="row my-5">
		@await Html.Kentico().EditableAreaAsync("WidgetArea2", new EditableAreaOptions
{
	AllowedWidgets = new[] { FAQWidget.IDENTIFIER },
})
	</div>
</div>


