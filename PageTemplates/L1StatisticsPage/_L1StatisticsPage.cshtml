@using Kentico.Content.Web.Mvc.PageBuilder
@using Convenience.org
@{
	Layout = "~/Features/Shared/Convenience/_Layout.cshtml";
}

@model TemplateViewModel

@{
	var templateModel = Model.GetTemplateModel<Convenience.L1Statistics>();
}

@section Placeholder {
	<div class="container d-flex justify-content-center">
		<div class="custom-placeholder text-center">
			<p class="m-0">Desktop Leaderboard - Optional (728x90px)</p>
		</div>
	</div>
}


<div class="container">
	@{
		var optionsLimited = new EditableAreaOptions
			{
				AllowedWidgets = WidgetAreaIdentifier.Hero_Widgets,
				AllowedSections = AllowedComponents.ALL
			};
	}
	<div class="row">
		@await Html.Kentico().EditableAreaAsync("HeroWidgetArea", optionsLimited)
	</div>
	<div class="container my-5 d-flex justify-content-center">
		<div class="custom-placeholder text-center">
			<p class="m-0">Desktop Leaderboard - Optional (728x90px)</p>
		</div>
	</div>




	<div class="row d-flex gap-0 align-items-stretch">
		<div class="col-12 col-md-8  ">
			<div class="w-100">
				@await Html.Kentico().EditableAreaAsync("WidgetAreaRichText")
			</div>

			<div class="custom-placeholder text-center">
				<p class="m-0">Desktop Leaderboard - Optional (728x90px)</p>
			</div>
		</div>

		<div class="col-12 col-md-4 ">
			<div class="w-100">
				@await Html.Kentico().EditableAreaAsync("WidgetAreaContentCardswidgets")
			</div>
			<div class="d-flex boxRec my-5 justify-content-center align-items-center me-5 p-4 text-center">
				<p class="box-text">
					Medium Rectangle - Optional
					(300x250px)
				</p>
			</div>
		</div>
	</div>

	<div class="row">
		@await Html.Kentico().EditableAreaAsync("WidgetAreaCoolnewproducts")
	</div>

	<div class="container my-5 d-flex justify-content-center">
		<div class="custom-placeholder text-center">
			<p class="m-0">Desktop Leaderboard - Optional (728x90px)</p>
		</div>
	</div>

	<div class="row d-flex gap-0 align-items-stretch">
		<div class="col-12 col-md-7 d-flex">
			
			<div class="w-100">
				<div class="d-flex flex-column ">
					<div class="text-start mb-4 border_left_green EyebrowTitleStyle-module__eyebrow">
						<span class="ps-4 text-uppercase font-monospace videoTitle">WEBINAR</span>
					</div>

					<span class="fs-3 my-3 videoTitle text-capitalize text-start">
						This is a title for the video content
					</span>
				</div>

				@await Html.Kentico().EditableAreaAsync("WidgetAreawebinarVideo")
			</div>
		</div>
		<div class="col-12 col-md-5 d-flex justify-content-center align-items-center">
			<div class="w-100 mt-5 d-flex justify-content-center align-items-center">
				@await Html.Kentico().EditableAreaAsync("WidgetAreawebinar")
			</div>
		</div>

	</div>


	<div class="container my-5 d-flex justify-content-center">
		<div class="custom-placeholder text-center">
			<p class="m-0">Desktop Leaderboard - Optional (728x90px)</p>
		</div>
	</div>

	<div class="my-5">
		@await Component.InvokeAsync("TagsCluster")
	</div>

	<div class="row">
		<!-- 40% Width -->
		<div class="col-12 col-md-4 d-flex">
			<div class="w-100">
				@await Html.Kentico().EditableAreaAsync("WidgetAreaTrendingTopics")
			</div>
		</div>

		<!-- 60% Width -->
		<div class="col-12 col-md-8 d-flex">
			<div class="w-100">
				@await Html.Kentico().EditableAreaAsync("WidgetArea7")
			</div>
		</div>
	</div>

	<div class="container my-5 d-flex justify-content-center">
		<div class="custom-placeholder text-center">
			<p class="m-0">Desktop Leaderboard - Optional (728x90px)</p>
		</div>
	</div>


	<div class="row mb-5">
		@await Html.Kentico().EditableAreaAsync("WidgetArea8")
	</div>
</div>