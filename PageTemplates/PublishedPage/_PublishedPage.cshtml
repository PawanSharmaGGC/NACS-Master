@using Kentico.Content.Web.Mvc.PageBuilder
@using Convenience.org
@using Convenience.org.Models

@{
	Layout = "~/Features/Shared/Convenience/_Layout.cshtml";
}

@{
	var isPreviewModel = Context.Kentico().PageBuilder().EditMode;
}

@section GoogleAdsBeforeHeader {
	<div>
		@await Html.Kentico().EditableAreaAsync("WidgetAreaBeforeHeader")
	</div>
}

<div>
	<div class="p-5">
		<div class="row">
			@await Component.InvokeAsync("Breadcrumb")
		</div>
	
		<div class="row">
			@await Html.Kentico().EditableAreaAsync("WidgetArea")
		</div>
		

		<div class="row">
			<div class="@(isPreviewModel?"col-8":"col-lg-8 col-sm-12")">
				@await Html.Kentico().EditableAreaAsync("WidgetAreaLeftTop")
				@await Component.InvokeAsync("SocialShare", new { model = new SocialShareViewModel()})
				@await Html.Kentico().EditableAreaAsync("WidgetAreaLeftBottom")
			</div>
			<div class="@(isPreviewModel?"col-4":"col-lg-4 col-sm-12")">
				@await Html.Kentico().EditableAreaAsync("WidgetAreaRight")
			</div>
		</div>


		<div class="row">
			<div class="@(isPreviewModel?"col-6":"col-lg-6 col-sm-12")">
				@await Html.Kentico().EditableAreaAsync("WidgetAreaGALeft")
			</div>
			<div class="@(isPreviewModel?"col-6":"col-lg-6 col-sm-12")">
				@await Html.Kentico().EditableAreaAsync("WidgetAreaGARight")
			</div>
		</div>
	

		<div class="row">
			@await Html.Kentico().EditableAreaAsync("WidgetAreaBottom1")
		</div>
	</div>


	<div>
		<div class="row">
			@await Html.Kentico().EditableAreaAsync("WidgetAreaCarousel")
		</div>
	</div>
	
	
	<div class="p-5">
		<div class="row">
			@await Html.Kentico().EditableAreaAsync("WidgetAreaBottom")
		</div>
	</div>
	
</div>
