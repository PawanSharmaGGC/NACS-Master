    .clear {
        clear: both;
    }

    /* -------------------------------------------- */
    .rTable {
        display: table;
        width: 100%;
    }

    .rTableRow {
        display: table-row;
    }

    .rTableHeading {
        display: table-header-group;
        background-color: #ddd;
    }

    .rTableCell1, .rTableHead1 {
        display: table-cell;
        width: 20%;
        /* border: 1px solid #ffffff;*/
        border: none;
    }

    .rTableCell2, .rTableHead2 {
        display: table-cell;
        width: 1%;
        text-align: center;
