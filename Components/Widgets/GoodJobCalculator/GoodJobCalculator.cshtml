        border: none;
        margin-right: 5px;
        text-align: center;
        font-weight: 700;
    }

    .stepCompleted {
        background-color: #fff;
        color: #60bc50 !important;
        border: none;
        margin-right: 5px;
        text-align: center;
        font-weight: 700;
    }

    .stepCurrent {
        background-color: #fff;
        color: #005f9e !important;
        border: none;
        margin-right: 5px;
        text-align: center;
        font-weight: 700;
    }

    .stepBreak {
        width: 3px;
