        0%, 20%, 40%, 60%, 80%, 100% {
            -webkit-transform: translateY(0);
        }

        50% {
            -webkit-transform: translateY(-15px);
        }
    }

    @@keyframes bounce {
        0%, 20%, 40%, 60%, 80%, 100% {
            transform: translateY(0);
        }

        50% {
