        font-weight: 400;
    }

    fieldset input {
        padding: 5px;
        margin: 10px 0;
    }

    .ctrl-container {
        min-width: 350px !important;
        border: 2px solid #005f9e;
        border-radius: 6px;
        margin: 15px 15px 0 0;
        width: 48%;
        float: left;
    }

    .ctrl-header {
        background-color: #005f9e;
        padding: 10px;
        color: #fff;
    }

        .ctrl-header h4 {
            margin-bottom: 0 !important;
            color: #fff !important;
        }

    .ctrl-content {
        padding: 20px;
    }

    #prevBtn {
        background-color: #bbbbbb;
    }

    /* Make circles that indicate the steps of the form: */
