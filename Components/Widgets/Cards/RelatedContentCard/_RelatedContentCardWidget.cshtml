@model Convenience.org.Components.Widgets.Cards.RelatedContentCard.RelatedContentCardWidgetViewModel

@if (Model != null)
{

	<div class="p-3 border-0 RelatedContentCardStyle-module__main_card card">
		<div class="border-0 RelatedContentCardStyle-module__section_card card">
			<div class="p-4 card-body">
				<div>
					<div class="text-start mb-4 border_left_blue EyebrowTitleStyle-module__eyebrow">
						<span class="ps-4 text-uppercase font-monospace text-primary">@Model.EyebrowTitle</span>
					</div>
				</div>
				<div class="p-1 text-start">
					<span class="color-0053A5">
						@Model.ArticleCardItem?.Title
					</span>
				</div>
				<div class="d-flex justify-content-between">
					@if (!string.IsNullOrEmpty(Model.CTAText))
					{
						<div class="fs-5 mt-3">
							<a href="@Model.ArticleCardItem?.ItemPageUrl" >
								<span class="me-2 color-0053A5">@Model.CTAText</span>
								<i class="fa-regular fa-arrow-right color-0053A5" aria-hidden="true"></i>
							</a>
						</div>
					}
					<div class="align-self-end opacity-50">
						<img src="data:image/png;base64," alt="">
					</div>
				</div>
			</div>
		</div>
	</div>
}