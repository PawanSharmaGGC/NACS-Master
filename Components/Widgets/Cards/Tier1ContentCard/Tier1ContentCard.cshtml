@model Convenience.org.Components.Widgets.Cards.Tier1ContentCard.Tier1ContentCardWidgetViewModel

@if (Model != null)
{
	<div>
		<div class="p-0 border border-0 Tier1ContentCardStyle-module__main_card card">
			<div class="border border-secondary-subtle p-4 Tier1ContentCardStyle-module__section_card card">
				<div class="text-start d-flex justify-content-between align-items-baseline">
					<div>
						<div class="text-start mb-4 border_left_green EyebrowTitleStyle-module__eyebrow">
							<span class="ps-4 text-uppercase font-monospace text-primary">
								@Model.EyebrowTitle
							</span>
						</div>
					</div>
					<span class="text-center mt-2 color-0053A5 bg-DBEAB9 TagsStyle-module__card_badge">
						@Model.EyebrowStatus
					</span>
				</div>
				<img class="card-img-top" src="@Model.ImageUrl" alt="@Model.ImageAltText">
				<div class="p-0 mt-3 card-body">
					<div class="text-start">
						<h4 class="color-262d61 mb-3">
							@Model.Title
						</h4>
						<p class="fs-6 mb-0 fw-semibold">
							@Html.Raw(Model.Description)
						</p>
					</div>
					<div class="pt-5">
						<div>
							<div class="text-start color-262d61">
								<p class="m-0 fs-5">
									<span>@Model.DateTime</span>
									@if (!string.IsNullOrEmpty(Model.LocationOrReadTime))
									{
										<span class="color-868F98 ps-3 pe-3 fs-3">|</span>
										<span class="text-body-tertiary"> @Model.LocationOrReadTime</span>
									}
								</p>
							</div>
						</div>
					</div>
					<div class="mt-4 d-flex Tier1ContentCardStyle-module__btn_section">
						<div class="mt-3 float-start">
							@if (!string.IsNullOrEmpty(Model.CTA1Text) && !string.IsNullOrEmpty(Model.CTA1Link))
							{
								<div class="">
									<a href="@Model.CTA1Link" class="bg-0053A5 p-3 border border-0 brdr-rad-30 text-decoration-none w-100 d-inline-block">
										<span>
											<i class="align-middle color-FFFFFF undefined undefined "></i>
										</span>
										<span class="color-FFFFFF pe-2 ps-2 fw-medium undefined">
											@Model.CTA1Text
										</span>
										<span>
											<i class="align-middle color-FFFFFF fa-regular fa-arrow-right-long " aria-hidden="true"></i>
										</span>
									</a>
								</div>
							}
						</div>
						<div class="mt-3 float-end">
							@if (!string.IsNullOrEmpty(Model.CTA2Text) && !string.IsNullOrEmpty(Model.CTA2Link))
							{
								<div class="">
									<a href="@Model.CTA2Link" class="bg-FFFFFF p-3 border border-0 brdr-rad-30 text-decoration-none w-100 mt-lg-0 mt-22 d-inline-block">
										<span>
											<i class="align-middle color-0053A5 undefined undefined "></i>
										</span>
										<span class="color-0053A5 text-start pe-lg-2 ps-lg-2 fw-medium undefined">
											@Model.CTA2Text
										</span>
										<span>
											<i class="align-middle color-0053A5 fa-solid fa-square-plus fa-lg" aria-hidden="true"></i>
										</span>
									</a>
								</div>
							}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
}
