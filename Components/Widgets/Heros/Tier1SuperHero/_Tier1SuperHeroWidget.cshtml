																		<path d="M20 13.333C21.187 14.913 21.187 17.087 20 18.667" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
																		<path d="M21.2209 11.667C23.1469 14.233 23.1469 17.767 21.2209 20.333" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
																	</svg>
																</span>
															</div>
														</div>
													</div>
												</div>
											</div>

										}
									}
								</div>

								<div class="text-center mt-1">
										<i class="fa-regular fa-angle-left prevNav fa-lg color-FFFFFF" aria-hidden="true"></i>
									<span class="pe-5"></span>
										<i class="fa-regular fa-angle-right nextNav fa-lg color-FFFFFF" aria-hidden="true"></i>
								</div>
							</div>

							<div class="Tier1HeroStyle-module__grid_view row">
								@if (Model.ArticleCards != null && Model.ArticleCards.Count > 0)
								{
									@foreach (var item in Model.ArticleCards)
									{
										<div class="col-lg-6 col-md-6">
											<div class="border border-0 bg-trans Tier1HeroStyle-module__flex_card card">
												<div class="m-3 brdr-rad-18 bg-DBEAB9 card-body">
													<div class="text-start p-2">
														<div class="text-start d-flex justify-content-between align-items-baseline">
															<div>
																<div class="text-start mb-4 border_left_green EyebrowTitleStyle-module__eyebrow">
																	<span class="ps-4 text-uppercase font-monospace color-0053A5">
																		@item.EyebrowTitle
																	</span>
																</div>
															</div><span class="text-center mt-2 color-0053A5 bg-DBEAB9 TagsStyle-module__card_badge">@item.EyebrowStatus</span>
														</div>
														<div class="fs-5 mb-5 mt-4 color-0053A5">
															@item.Title
														</div>
														<div class="color-0053A5"></div>
														<div class="d-flex justify-content-between">

															@if (!string.IsNullOrEmpty(item.PageUrl))
															{
																<a href="@item.PageUrl" class="fs-5 color-396a99 pointer text-decoration-none">
																	<span class="d-inline-block pe-1 fw-medium">
																		Read Story
																	</span>
																	<span class="align-middle">
																		<i class="fa-regular fa-arrow-right-long color-396a99" aria-hidden="true"></i>
